<div class='toolbar'>
  <ul class='actions'>
    <li>
      <%= button_link_to t("new_shipping_restriction"), new_object_url, :icon => 'add'  %>
    </li>
  </ul>
  <br class='clear' />
</div>

<h1><%= t("shipping_restrictions") %></h1>

<table class="index">
  <thead>
    <th><%= t("zone") %></th>
    <th><%= t("product") %></th>
    <th><%= t("product_group") %></th>
    <th><%= t("action") %></th>
  </thead>
  <tbody>
    <% @shipping_restrictions.each do |shipping_restriction|%>
    <tr id="<%= dom_id shipping_restriction %>">
      <td><%= shipping_restriction.zone.try(:name) %></td>
      <td><%= shipping_restriction.product.try(:name) %></td>
      <td><%= shipping_restriction.product_group.try(:name) %></td>      
      <td>
      	<%= link_to_edit shipping_restriction %> &nbsp;
      	<%= link_to_delete shipping_restriction %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

      
